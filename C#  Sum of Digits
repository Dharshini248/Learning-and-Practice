using System;
public class SumofDigits
{
    public static void Main(string[]args)
    {
        int n,r,sum=0;
        Console.Write("Enter the Value:");
        n =int.Parse(Console.ReadLine());
        while(n!=0)
        {
            r=n%10;
            sum=sum+r;
            n=n/10;
        }
        Console.Write("Sum = "+sum);
    }
}
