using System;
public class ReverseNumber
{
    public static void Main(string[]args)
    {
       int n,r,rev=0;
       Console.Write("Enter the Value: ");
       n=int.Parse(Console.ReadLine());
       while(n!=0)
       {
          r=n%10;
          rev=rev*10+r;
          n=n/10;
       }
       Console.Write(rev);
    }
}
